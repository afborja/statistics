<?xml version="1.0" encoding="ISO-8859-1"?>
<web-app 
   xmlns="http://java.sun.com/xml/ns/javaee" 
   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
   xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" 
   version="2.5">
  <context-param>
    <param-name>contextConfigLocation</param-name>
    <param-value>/WEB-INF/applicationContext*.xml</param-value>
  </context-param>
  <listener>
    <listener-class>
        org.springframework.web.context.ContextLoaderListener
    </listener-class>
  </listener> 
  <servlet>
    <servlet-name>Transactions</servlet-name>
    <servlet-class>com.andresborja.stats.controllers.TransactionsServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>Statistics</servlet-name>
    <servlet-class>com.andresborja.stats.controllers.StatisticsServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>Transactions</servlet-name>
    <url-pattern>/transactions/*</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>Statistics</servlet-name>
    <url-pattern>/statistics/*</url-pattern>
  </servlet-mapping>
</web-app>